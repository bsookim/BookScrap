package com.scrap.controller;

import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;
import com.scrap.request.BooksReplyRequest;

import com.scrap.service.BooksReplyService;

import lombok.RequiredArgsConstructor;

@RequestMapping("/books")
@RequiredArgsConstructor
@RestController
@CrossOrigin("http://localhost:3001") 
public class BooksReplyController {
	
	private final BooksReplyService booksReplyService; 
	
	@PostMapping("/reply/save")
	public void booksReplySave(@RequestBody BooksReplyRequest BooksReplyRequest) {
		booksReplyService.save(BooksReplyRequest);
	}
	
	public void booksReplyUpdate(@RequestBody BooksReplyRequest BooksReplyRequest) {
		booksReplyService.update(BooksReplyRequest);
	}
}
