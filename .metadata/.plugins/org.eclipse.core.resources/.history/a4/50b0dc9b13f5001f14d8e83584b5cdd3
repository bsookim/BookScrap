package com.shop.dto;


import com.shop.CoupangDetails;

import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;

@Getter
@AllArgsConstructor
@NoArgsConstructor
@Setter
@Builder
public class CoupangDetailsDto {
	
	private String content;
	
	/*
	 * IMAGE	이미지
	 *  TEXT	텍스트
	 */
	//O
	private String detailType;
	
	private CoupangDto coupangDto;
	
	private CoupangContentsDto coupangContentsDto;
	
	private Long coupangContentsId;
	
	private Long coupangId;
	
	public static CoupangDetailsDto fromEntity(CoupangDetails details) {
        return CoupangDetailsDto.builder()
            .content(details.getContent())
            .detailType(details.getDetailType())
            .build();
	}
	
}
