package com.scrap.response;

import com.scrap.entity.BooksReply;

import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Getter;
import lombok.NoArgsConstructor;

@Getter
@Builder
@AllArgsConstructor
@NoArgsConstructor
public class BooksReplyResponse {
	
	private Long id;
	
	private String content;
	
	public static BooksReplyResponse booksReplyResponse(BooksReply booksReply) {
		return BooksReplyResponse.builder()
					.id(booksReply.getId())
					.content(booksReply.getContent())
					.build();
	}
	
}
