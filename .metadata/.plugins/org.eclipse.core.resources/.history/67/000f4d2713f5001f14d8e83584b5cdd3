package com.shop.dto;

import com.fasterxml.jackson.annotation.JsonBackReference;
import com.shop.Coupang;
import com.shop.CoupangAttributes;
import com.shop.CoupangItems;

import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Getter;
import lombok.NoArgsConstructor;
import lombok.Setter;

@Getter
@AllArgsConstructor
@NoArgsConstructor
@Setter
@Builder
public class CoupangAttributesDto {
	//절대 dto에서 양방향 매핑 하지 말자 순화
//	private Long id;
	
	private String attributeTypeName;
    
	private String attributeValueName;
    
    private String exposed;
    
    private CoupangDto coupangDto;
    
	private CoupangItemsDto coupangItemsDto;


    private Long coupangItemsId;
    
    private Long coupangId;
    
    public static CoupangAttributesDto fromEntity(CoupangAttributes attributes) {
        return CoupangAttributesDto.builder()
            .attributeTypeName(attributes.getAttributeTypeName())
            .attributeValueName(attributes.getAttributeValueName())
            .exposed(attributes.getExposed())
            .coupangId(attributes.getCoupang().getCoupangId())
            .coupangItemsId(attributes.getCoupangItems().getItemId())
            .build();
    }
    
}
