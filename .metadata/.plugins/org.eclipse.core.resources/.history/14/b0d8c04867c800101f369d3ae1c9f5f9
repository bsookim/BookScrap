package com.scrap.repository;

import java.util.List;

import org.springframework.data.jpa.repository.JpaRepository;
import org.springframework.data.jpa.repository.Query;
import org.springframework.data.repository.query.Param;

import com.scrap.entity.BooksReply;

public interface BooksReplyRepository extends JpaRepository<BooksReply, Long>{

	@Query(value="SELECT br BooksReply br WHERE br.books.id = :id")
	List<BooksReply> findAllById(@Param("id")Long id);

}
