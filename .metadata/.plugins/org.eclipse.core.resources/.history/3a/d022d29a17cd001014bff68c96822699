import lombok.RequiredArgsConstructor;

@RequiredArgsConstructor
@Service
@Transactional
public class BookReplyService {

	private final BookReplyRepository bookReplyRepository;
	
	public void save() {
		bookReplyRepository.save(null);
	}

	@Transactional(readOnly=true)
	public List<BookReplyDto> replyFindAll() {
		List<BookReply> reply = bookReplyRepository.findAll(); 
		List<BookReplyDto> list= BookReplyDto.replyFindAll(reply);
		return null;
	}
	
	public void update(@PathVariable Long id,@RequestParam("content") String content) {
//		bookReplyRepository.update(id,content);
	}
	
}
