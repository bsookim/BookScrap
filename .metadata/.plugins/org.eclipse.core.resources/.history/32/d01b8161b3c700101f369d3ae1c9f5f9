package com.scrap.response;

import java.util.ArrayList;
import java.util.List;

import com.scrap.entity.Books;

import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Getter;
import lombok.NoArgsConstructor;

@Getter
@NoArgsConstructor
@AllArgsConstructor
@Builder
public class BooksListResponse {
	
	private Long id;
	
	private String title;
	
	private String price;
	
	private String stock;
	
	private String descpription;
	
	private String upc;
	
	private String productType;

	private String currnetUrl;
	
	private String thumbNail;
	
	private List<String> category = new ArrayList<>();
	
	public static BooksListResponse booksResponse(Books books) {
		System.out.println(books.getCurrnetUrl());
	    System.out.println(books.getTitle());
		return BooksListResponse.builder()
						.id(books.getId())
						.title(books.getTitle())
						.price(books.getPrice())
						.stock(books.getStock())
						.descpription(books.getDescpription())
						.upc(books.getUpc())
						.productType(books.getProductType())
						.currnetUrl(books.getCurrnetUrl())
						.thumbNail(books.getThumbNail())
						.category(books.getCategory())
						.build();
	}

}
