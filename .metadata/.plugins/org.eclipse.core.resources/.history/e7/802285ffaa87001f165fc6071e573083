package com.shop.selenium.dto;

import java.util.ArrayList;
import java.util.List;

import org.openqa.selenium.WebDriver;
import org.openqa.selenium.WebElement;
import org.openqa.selenium.support.FindAll;
import org.openqa.selenium.support.FindBy;
import org.openqa.selenium.support.PageFactory;

import lombok.Getter;

@Getter
public class SCoupangDto {
	
	private WebDriver driver;
	
	@FindAll({
		@FindBy(css="#contents > div.xans-element-.xans-product.xans-product-detail > div.detailArea > div.infoArea > h2"),
	})
	private WebElement title;
	
	@FindBy(css="#span_product_price_text")
	private WebElement price;
	
	@FindAll({
		@FindBy(css="#contents > div.xans-element-.xans-product.xans-product-detail > div.detailArea > div.infoArea > div.xans-element-.xans-product.xans-product-detaildesign > table > tbody > tr"),
	})
	private List<WebElement> productList = new ArrayList<>();
	
	@FindAll({
		@FindBy(css = "#contents > div.xans-element-.xans-product.xans-product-detail > div.detailArea > "
				+ "div.xans-element-.xans-product.xans-product-image.imgArea > "
				+ "div.keyImg > a > img"),
		@FindBy(css="#contents > div.xans-element-.xans-product.xans-product-detail > div.detailArea > "
				+ "div.xans-element-.xans-product.xans-product-image.imgArea > "
				+ "div.keyImg.item > div.thumbnail > a > img"),
	})
	private List<WebElement> thumbLists =new ArrayList<>();
	
	@FindAll(
		@FindBy(css = "#prdDetail *")
	)
	private List<WebElement> detailImageLists =new ArrayList<>();

	
	@FindAll({
		@FindBy(css ="#contents > div.xans-element-.xans-product.xans-product-detail > "
				+ "div.detailArea > div.infoArea > "
				+ "table > tbody > tr > td > select")
//		@FindBy(css = "#contents > div.xans-element-.xans-product.xans-product-detail > div.detailArea > div.infoArea > "
//				+ "div.buy_wrap.top > div.buy_box > div > div > div > div.scrollbar_box.op_list_h > table >"
//				+ " tbody.xans-element-.xans-product.xans-product-option.xans-record- > tr > td > select")
	})
	private List<WebElement> selectBox = new ArrayList<>();
	
	public SCoupangDto(WebDriver driver) {
		this.driver = driver;
        PageFactory.initElements(driver, this);
	}
}


//By ID: @FindBy(id = "elementId")
//By Name: @FindBy(name = "elementName")
//By Class Name: @FindBy(className = "className")
//By CSS Selector: @FindBy(css = "cssSelector")
//By XPath: @FindBy(xpath = "xpathExpression")