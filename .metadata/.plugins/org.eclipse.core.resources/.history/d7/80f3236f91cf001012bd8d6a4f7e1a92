package com.scrap.service;

import java.util.List;

import org.springframework.stereotype.Service;
import org.springframework.transaction.annotation.Transactional;
import org.springframework.web.bind.annotation.PathVariable;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestParam;

import com.scrap.dto.BookDto;
import com.scrap.dto.BookReplyDto;
import com.scrap.entity.Book;
import com.scrap.entity.BookReply;
import com.scrap.repository.BookReplyRepository;
import com.scrap.repository.BookRepository;
import com.scrap.request.BookReplyRequest;

import lombok.RequiredArgsConstructor;
@RequiredArgsConstructor
@Service
@Transactional
public class BookReplyService {

	private final BookReplyRepository bookReplyRepository;
	
	private final BookRepository bookRepository;
	
	public void replySave(Long id ,BookReplyRequest bookReplyRequest) {
		Book book=bookRepository.findById(id).orElseThrow();
		BookReply reply =BookReply.builder().book(book).content(bookReplyRequest.getContent()).build();
		bookReplyRepository.save(reply);
	}

	@Transactional(readOnly=true)
	public List<BookReplyDto> replyFindAll() {
		List<BookReply> reply = bookReplyRepository.findAll(); 
		List<BookReplyDto> list= BookReplyDto.replyFindAll(reply);
		return list;
	}

	//bookService에 bookUpdate 주석 참고 더티체킹 설명되어있음.
	public void replyUpdate(Long replyId, BookReplyRequest bookReplyRequest) {
		BookReply bookReply =bookReplyRepository.findById(replyId).orElseThrow();
		bookReply.update(bookReplyRequest.getContent());
		bookReplyRepository.save(bookReply);
	}
	
	public void replyDeleteById(Long replyId) {
		bookReplyRepository.deleteById(replyId);
	}
//	#pageing-list > div > p.next_icon
//	#pageing-list > div > p.next_icon
}
