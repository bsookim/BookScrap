package com.scrap.response;

import com.scrap.entity.Books;

import lombok.AllArgsConstructor;
import lombok.Builder;
import lombok.Getter;
import lombok.NoArgsConstructor;

@Getter
@NoArgsConstructor
@AllArgsConstructor
@Builder
public class BooksDetailResponse {
	
	private Long id;
	
	private String title;
	
	private String price;
	
	private String stock;
	
	private String descpription;
	
	private String upc;
	
	private String productType;

	private String currnetUrl;
	
	private String thumbNail;
	
	public static BooksDetailResponse booksDetailResponse(Books books) {
		
		return BooksDetailResponse.builder()
				.id(books.getId())
				.title(books.getTitle())
				.price(books.getPrice())
				.stock(books.getStock())
				.descpription(books.getDescpription())
				.upc(books.getUpc())
				.productType(books.getProductType())
				.currnetUrl(books.getCurrnetUrl())
				.thumbNail(books.getThumbNail())
				.build();
	}
}
