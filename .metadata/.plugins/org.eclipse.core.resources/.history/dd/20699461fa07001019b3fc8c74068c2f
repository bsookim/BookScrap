package com.coupang.controller;

import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RequestParam;
import org.springframework.web.bind.annotation.RestController;

import com.coupang.returns.dto.response.CoupangReturnShippingDetailResponse;
import com.coupang.returns.dto.response.CoupangReturnShippingResponse;
import com.coupang.service.CoupangReturnShippingService;

import lombok.RequiredArgsConstructor;

//출고지 컨트롤러
@RestController
@RequestMapping("/api/coupang/return-shipping")
@RequiredArgsConstructor
@CrossOrigin("http://localhost:3000/")
public class CoupangReturnShippingController {

	private final CoupangReturnShippingService coupangReturnShippingService;
	
//	@PostMapping("/save")
//	public void outboundShippingSave(@RequestBody CoupangReturnShippingCreateDto coupangReturnReturnDto, @RequestParam("coupangUserId") Long coupangUserId ) {
//		coupangReturnShippingService.returnShippingSave(coupangReturnReturnDto,coupangUserId);
//	}
	
	//반품지 리스트
	@GetMapping("/list")
	public CoupangReturnShippingResponse outboundShippingList(@RequestParam("coupangUserId") Long coupangUserId) {
        return coupangReturnShippingService.returnShippingList(coupangUserId);
    }
	
	 //반품지 조회
	@GetMapping("/detail")
	public CoupangReturnShippingDetailResponse outboundShippingDetail(@RequestParam("coupangUserId") Long coupangUserId,@RequestParam("returnCenterCode") String returnCenterCode) {
		return coupangReturnShippingService.returnShippingDetail(coupangUserId,returnCenterCode);
    }
	
}
