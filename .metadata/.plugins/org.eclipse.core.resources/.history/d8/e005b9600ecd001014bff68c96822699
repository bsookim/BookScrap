package com.scrap.controller;

import java.util.List;

import org.springframework.web.bind.annotation.CrossOrigin;
import org.springframework.web.bind.annotation.GetMapping;
import org.springframework.web.bind.annotation.PostMapping;
import org.springframework.web.bind.annotation.RequestBody;
import org.springframework.web.bind.annotation.RequestMapping;
import org.springframework.web.bind.annotation.RestController;

import com.scrap.service.BookService;
import com.scrap.request.UrlRequest;

import lombok.RequiredArgsConstructor;

@RequestMapping("/book")
@RequiredArgsConstructor
@RestController
@CrossOrigin("http://localhost:3001")
public class BookController {

	private final BookService booksService;
	
	//컨트롤러 주석
	@PostMapping("/save")
	public void bookSavea(@RequestBody UrlRequest urlRequest) {
	    booksService.bookSave(urlRequest.getUrl());
	}
	
	@GetMapping("/find/{id}")
	public List<String> bookFindById(){
		booksService.bookFindById();
	}

}
