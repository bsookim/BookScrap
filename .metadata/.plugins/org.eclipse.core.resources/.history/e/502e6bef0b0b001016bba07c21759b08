package com.coupang.hamc;

import java.util.ArrayList;
import java.util.List;

import org.apache.http.HttpEntity;
import org.apache.http.client.methods.CloseableHttpResponse;
import org.apache.http.client.methods.HttpGet;
import org.apache.http.client.utils.URIBuilder;
import org.apache.http.impl.client.CloseableHttpClient;
import org.apache.http.impl.client.HttpClients;
import org.apache.http.util.EntityUtils;
import org.springframework.stereotype.Component;

import com.coupang.openapi.sdk.Hmac;
import com.fasterxml.jackson.databind.JsonNode;
import com.fasterxml.jackson.databind.ObjectMapper;

@Component
public class HmacProductDetail {
	private static final String HOST = "api-gateway.coupang.com";
    private static final int PORT = 443;
    private static final String SCHEMA = "https";
    private static final String ACCESS_KEY = "f20949fb-c3f6-417a-a357-94d4e6f405d6";
    private static final String SECRET_KEY = "0d4263d854b749ba1742a44d8223c7bf6854d5cc";
    
    //상품 조회
	public List<Long> detailDataToCoupang(Long jsonPayload) {	
		//params
	    String method = "GET";
	    String path = String.format("/v2/providers/seller_api/apis/api/v1/marketplace/seller-products/%d", jsonPayload);
	    
	    try (CloseableHttpClient client = HttpClients.createDefault()) { 
	        URIBuilder uriBuilder = new URIBuilder().setPath(path);
	        
	        String authorization = Hmac.generate(method, uriBuilder.build().toString(), SECRET_KEY, ACCESS_KEY);
	        uriBuilder.setScheme(SCHEMA).setHost(HOST).setPort(PORT);
	        HttpGet get = new HttpGet(uriBuilder.build().toString());
	        
	        get.addHeader("Authorization", authorization);
	        get.addHeader("content-type", "application/json");
	        
	        try (CloseableHttpResponse response = client.execute(get)) { 
	            HttpEntity entity = response.getEntity();
	            String result = EntityUtils.toString(entity);

	            return extractVendorItemIds(result);
	        } catch (Exception e) {
	            e.printStackTrace();
	        }
	    } catch (Exception e) {
	        e.printStackTrace();
	    }
		return null;
	}
	
	 private List<Long> extractVendorItemIds(String jsonResponse) {
		 	List<Long> vendorItemIds = new ArrayList<>();
		    ObjectMapper objectMapper = new ObjectMapper();

		    try {
		        JsonNode rootNode = objectMapper.readTree(jsonResponse);
		        JsonNode dataNode = rootNode.path("data");
		        JsonNode itemsNode = dataNode.path("items");

		        if (itemsNode.isArray()) {
		            for (JsonNode item : itemsNode) {
		                JsonNode vendorItemIdNode = item.path("vendorItemId");
		                if (vendorItemIdNode.isLong()) { 
		                    long vendorItemId = vendorItemIdNode.asLong();
		                    System.out.println("Extracted vendorItemId: " + vendorItemId);
		                    vendorItemIds.add(vendorItemId);
		                }
		            }
		        }
	        } catch (Exception e) {
	            e.printStackTrace();
	        }

	        return vendorItemIds;
	    }
}


